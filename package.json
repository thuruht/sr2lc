{
  "type": "module",
  "scripts": {
    "dev": "npm-run-all --parallel dev:frontend dev:backend",
    "dev:frontend": "vite --port 3000",
    "dev:backend": "wrangler dev worker/index.tsx --port 8787",
    "build": "vite build",
    "preview": "$npm_execpath run build && vite preview",
    "deploy": "$npm_execpath run build && wrangler deploy",
    "cf-typegen": "wrangler types --env-interface CloudflareBindings",
    "db:setup": "wrangler d1 execute sr2lc-db --file=worker/schema.sql"
  },
  "dependencies": {
    "hono": "^4.10.4",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "@paypal/react-paypal-js": "^8.1.3",
    "react-router-dom": "^6.22.3",
    "quill": "^2.0.2",
    "react-quill": "^2.0.0"
  },
  "devDependencies": {
    "@types/react": "^18.2.43",
    "@types/react-dom": "^18.2.17",
    "@types/react-router-dom": "^5.3.3",
    "vite": "^6.3.5",
    "wrangler": "^4.17.0",
    "@vitejs/plugin-react": "^4.2.1",
    "npm-run-all": "^4.1.5",
    "bcryptjs": "^2.4.3",
    "@types/bcryptjs": "^2.4.6"
  }
}
